@model IEnumerable<FriendshipFinder.Models.Post>

@{
    Layout = null;
}

@foreach (var item in Model.Take(8))
{
        <div class="follow-user">
            @if (item.Photo != null)
            {
                string[] images = item.Photo.Split(',');
                for (int img = 0; img < images.Length; img++)
                {
                    if (img == 0)
                    {
                        <img src="~/Uploads/Images/@images[img]" alt="post-image" class="profile-photo-sm pull-left" />
                    }
                }
            }

            <div>
                <p class="text-green1">@Html.DisplayFor(modelItem => item.Description)</p>
            </div>
        </div>
}
